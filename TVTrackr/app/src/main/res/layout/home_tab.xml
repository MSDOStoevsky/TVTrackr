<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FirstTab">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical">
        <TextView
            android:id="@+id/today_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_today"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/today_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_empty"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_today_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/featured_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Featured Shows..."
            android:textSize="40dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/featured_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/featured_empty"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_featured_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</ScrollView>